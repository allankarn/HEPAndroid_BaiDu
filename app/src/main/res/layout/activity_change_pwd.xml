<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".my.ChangePwdActivity">

    <com.enetedu.hep.utils.SimpleToolbar
        android:id="@+id/simple_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/toolbar"
        android:fitsSystemWindows="true"
        android:minHeight="?attr/actionBarSize"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp">

        <TextView
            android:id="@+id/txt_left_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@mipmap/left1_2x"
            android:gravity="center"
            android:singleLine="true"
            android:text="返回"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/txt_main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:singleLine="true"
            android:text="密码修改"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:visibility="visible"/>

    </com.enetedu.hep.utils.SimpleToolbar>
    <TextView
        android:padding="10dp"
        android:text="旧密码："
        android:background="@color/base_e4"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
    <EditText
        android:id="@+id/et_jiu"
        android:padding="10dp"
        android:background="@null"
        android:hint="请输入旧密码"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
    <TextView
        android:padding="10dp"
        android:text="新密码："
        android:background="@color/base_e4"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
    <EditText
        android:id="@+id/et_new"
        android:padding="10dp"
        android:background="@null"
        android:hint="8-16位，至少包含数字/字母"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
    <TextView
        android:padding="10dp"
        android:text="再次输入新密码："
        android:background="@color/base_e4"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
    <EditText
        android:id="@+id/et_new2"
        android:padding="10dp"
        android:background="@null"
        android:hint="8-16位，至少包含数字/字母"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>

    <TextView
        android:id="@+id/tv_queding"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@mipmap/login"
        android:gravity="center"
        android:text="确定"
        android:textColor="@android:color/white"
        android:textSize="18sp"/>
</LinearLayout>