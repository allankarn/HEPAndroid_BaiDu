<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="100dp"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp">

        <CheckBox
            android:id="@+id/check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"/>

        <ImageView
            android:id="@+id/iv_tu"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_toRightOf="@+id/check"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_tu"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="高校研究生思想政治理论课2018版教材(教学大纲)使用培训课程"
                android:textColor="@color/tab_bottom_normal"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="学时单位："/>

                <TextView
                    android:id="@+id/tv_xueshi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.93"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="授课方式："/>

                <TextView
                    android:id="@+id/tv_fangshi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="在线"/>
            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:id="@+id/iv_shanchu"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/shanchu"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/base_e4"/>
</LinearLayout>
