<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/relVideoLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/tab_bottom_normal">

    <VideoView
        android:id="@+id/surVideo"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"/>
    <ProgressBar
        android:id="@+id/proSeek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/relTopBar"
        android:layout_width="fill_parent"
        android:layout_height="54dp"
        android:background="@color/tab_bottom_normal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="54dp"
            android:layout_height="52dp"
            android:layout_marginLeft="6dp"
            android:padding="6dp"
            android:src="@drawable/selector_img_back"/>

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="108dp"
            android:layout_marginRight="108dp"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="13123"
            android:textColor="@color/base_e4"
            android:textSize="18sp"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/relBottomBar"
        android:layout_width="fill_parent"
        android:layout_height="54dp"
        android:layout_alignParentBottom="true"
        android:background="@color/tab_bottom_normal"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgPlay"
            android:layout_width="54dp"
            android:layout_height="52dp"
            android:padding="19dp"
            android:src="@drawable/selector_img_play_pause"/>

        <TextView
            android:id="@+id/txtProssTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00:00"
            android:textColor="@color/base_e4"/>

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="0dp"
            android:layout_height="16dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:progress="100"/>

        <TextView
            android:id="@+id/txtTotalTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00:00"
            android:textColor="@color/base_e4"/>

        <ImageView
            android:id="@+id/imgScreenSwitch"
            android:layout_width="54dp"
            android:layout_height="52dp"
            android:padding="19dp"
            android:src="@drawable/selector_img_screenswitch"/>
    </LinearLayout>

</RelativeLayout>